<div id="artist_details">
    <div class="blue-button details-back">Go back</div>
    <section>
        <h2>Artist Details</h2>

        <div class="description">
            <div class="music"><image style = "max-width:100px;" src = {{image}}/></div>
            <div>Name : <strong>{{artist_name}}</strong></div>
            <br>

            <div>Artist location : {{artist_location}}</div>
            <br>
            <div><b>Artist concerts:</b> <ul id="venues"></ul></div>
            <br>
            <div>Artist terms :
                <ul class="music-styles">{{#artist_terms}}
                    <li>{{.}}</li>{{/artist_terms}}</ul>
            </div>
            <div id="heatmapArea"/>
        </div>
    </section>
</div>
