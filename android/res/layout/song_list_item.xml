<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:paddingTop="8dp"
              android:paddingBottom="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tx_song_artist"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placeholder"
                android:textStyle="bold"
                android:textSize="14dp"
                android:singleLine="true"
                android:textColor="#3baeff"
                android:layout_weight="1"
                android:layout_marginRight="10dp"/>

        <RatingBar android:id="@+id/ratingbar_list_song_rating"
                   style="?android:attr/ratingBarStyleSmall"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="right|bottom"
                   android:numStars="5"
                   android:rating="2.5"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tx_song_title"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="placeholder"
            android:textSize="14dp" android:textColor="#fdff5a"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tx_song_release"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_weight="1"
                android:text="placeholder azkjehak akjzeh akjeha kejha kazjeh kajehazk jeh azkjeha "
                android:textSize="14dp"/>

        <TextView
                android:id="@+id/tx_song_duration"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14dp"
                android:textColor="#fdff5a"
                android:layout_gravity="right|bottom" />

    </LinearLayout>

