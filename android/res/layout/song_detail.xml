<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp"
                  android:paddingTop="4dp"
                  android:paddingBottom="4dp">

        <TextView
                android:id="@+id/tx_detail_song_details"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#f4ff04"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="15dp">

            <TextView
                    android:id="@+id/tx_detail_song_artist_label"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist: "
                    android:textSize="18dp"
                    android:textColor="#00ffdc"/>

            <TextView
                    android:id="@+id/tx_detail_song_artist"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist name"
                    android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="15dp">

            <TextView
                    android:id="@+id/tx_detail_song_release_label"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Album: "
                    android:textSize="18dp"
                    android:textColor="#00ffdc"/>

            <TextView
                    android:id="@+id/tx_detail_song_release"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release"
                    android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="15dp">

            <TextView
                    android:id="@+id/tx_detail_song_release_label"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags: "
                    android:textSize="18dp" android:textColor="#00ffdc"/>
            <TextView
                    android:id="@+id/tx_detail_song_year"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="15dp">

            <RatingBar android:id="@+id/ratingbar_detail_song_rating"
                       style="?android:attr/ratingBarStyleIndicator"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:numStars="5"
                       android:rating="2.5"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
